@page
@model WebApp.Admin.IndexModel
@{
    ViewData["Title"] = "Authentication";
}

<h1>@ViewData["Title"]</h1>
<body class="second-body">
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label" asp-for="admins.Login"></label>
                    <input class="form-control" name="username" asp-for="admins.Login" />
                    <span class="text-danger" asp-validation-for="admins.Login"></span>
                </div>
                <div class="form-group">
                    <label class="control-label" asp-for="admins.Password">Password</label>
                    <input type="password" class="form-control" name="password" asp-for="admins.Password" />
                    <span class="text-danger" asp-validation-for="admins.Password"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Connect" class="btn btn-primary" />
                    <input type="reset" value="Cancel" class="btn btn-secondary" />
                </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="/Index">Back to List</a>
    </div>
</body>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
